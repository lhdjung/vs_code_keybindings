// Place your key bindings in this file to override the defaults
[
    // Toggle between terminal and editor focus
    // Note: taken from https://stackoverflow.com/questions/42796887/switch-focus-between-editor-and-integrated-terminal
    // and adapted to mirror RStudio's built-in functionality
{
    "key":     "ctrl+2",
    "command": "workbench.action.terminal.focus"
},
{
    "key":     "ctrl+1",
    "command": "workbench.action.focusActiveEditorGroup",
    "when":    "terminalFocus"
}
]